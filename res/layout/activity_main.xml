<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    	<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal" >
    	
    		<Button
    	    	android:id="@+id/button_start_WiFi"
    	   	 	android:layout_width="200dip"
    	    	android:layout_height="wrap_content"
    	    	android:onClick="onClick_WiFi"
    	    	android:text="@string/test_WiFi" />
    		
    		<TextView
    	    	android:id="@+id/text_WiFi"
    	    	android:layout_width="100dip"
    	    	android:layout_height="wrap_content"
    	    	android:textAppearance="?android:attr/textAppearanceMedium" />

    	</LinearLayout>
    	
    	<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal" >
    	
    		<Button
    	   		android:id="@+id/button_start_LTE"
    	    	android:layout_width="200dip"
    	    	android:layout_height="wrap_content"
    	    	android:onClick="onClick_LTE"
    	    	android:text="@string/test_LTE" />
    		
    		<TextView
    	    	android:id="@+id/text_LTE"
    	    	android:layout_width="100dip"
    	    	android:layout_height="wrap_content"
    	    	android:textAppearance="?android:attr/textAppearanceMedium" />

    	</LinearLayout>
    	
    	<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal" >
    		
    		<Button
    	    	android:id="@+id/button_start_3G"
    	    	android:layout_width="200dip"
    	    	android:layout_height="wrap_content"
    	    	android:onClick="onClick_3G"
    	    	android:text="@string/test_3G" />
    		
    		<TextView
    	    	android:id="@+id/text_3G"
    	    	android:layout_width="100dip"
    	    	android:layout_height="wrap_content"
    	    	android:textAppearance="?android:attr/textAppearanceMedium" />

    	</LinearLayout>
    	
    	<TextView
    	    	android:id="@+id/current_status"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:textAppearance="?android:attr/textAppearanceMedium" />
    	
</LinearLayout>